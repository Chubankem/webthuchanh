@model IEnumerable<Product498.Models.Product>

@{
    ViewBag.Title = "GetListproduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetListproduct</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imgcover)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryID)
    </td>
    <td style="text-align: center">
        <img src="@item.Imgcover" width="95" title="Cover" />
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
